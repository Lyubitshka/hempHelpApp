<%- layout('layouts/boilerplate') %>
    <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="">
            <label for="title">Title</label>
            <input type="text" name="post[title]" id="title" value="<%= post.title %>">
        </div>
        <div class="">
            <label for="description">Description</label>
            <input type="text" name="post[description]" id="description" value="<%= post.description %>">
        </div>
        <div class="">
            <label for="branch">Branch</label>
            <input type="text" name="post[branch]" id="branch" value="<%= post.branch %>">
        </div>
        <div class="">
            <label for="hashTags">#</label>
            <input type="text" name="post[hashTags]" id="hashTags" value="<%= post.hashTags %>">
        </div>
        <button>Edit Informations</button>
    </form>
    <footer><a href="/posts">Back to The Board</a></footer>
