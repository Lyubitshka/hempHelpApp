<%- layout('layouts/boilerplate') %> 
    <form action="/posts" method="POST">
        <div class="">
            <label for="title">Title</label>
            <input type="text" name="post[title]" id="title">
        </div>
        <div class="">
            <label for="description">Description</label>
            <input type="text" name="post[description]" id="description">
        </div>
        <div class="">
            <label for="branch">Branch</label>
            <input type="text" name="post[branch]" id="branch">
        </div>
        <div class="">
            <label for="hashTags">#</label>
            <input type="text" name="post[hashTags]" id="hashTags">
        </div>
        <button>Add New Post</button>
    </form>
    <footer><a href="/posts">Back to The Board</a></footer>
